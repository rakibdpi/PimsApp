@model  Pims.Core.ViewModel.OperationModules.EducationInformationsViewModel

@{
    ViewBag.Title = "EduEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12" id="myForm">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box box-primary">
                <div class="box-header with-border"><h5 class="box-title">Search</h5></div>
                <div class="box-body">
                    <div class="col-md-12 col-sm-12">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    <div class="input-group">
                                        <input type="text" id="txtFindTrainee" class="form-control" placeholder="Search By NSSL Id...">
                                        <span class="input-group-addon btn btn-primary" id="btnSearch"><i class="fa fa-search" aria-hidden="true"></i></span>
                                    </div><!-- /input-group -->
                                </div><!-- /.col-lg-6 -->
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NameEnglish, "Name", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.NameEnglish, new { htmlAttributes = new { @class = "form-control", @id = "SearchName", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PhoneNo, "Phone No", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", @id = "SearchPhoneNo", @disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="box-header with-border"><h4 class="box-title">General Info</h4></div>
                            <div class="box-body">
                                <div class="col-md-6 col-sm-6">
                                   
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ExamName, "Exam Name", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.ExamName, new { htmlAttributes = new { @class = "form-control", @tabindex = "2" } })
                                        @Html.ValidationMessageFor(model => model.ExamName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UniversityId, "University Name", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(c => c.UniversityId, null, "", htmlAttributes: new { @class = "form-control", @tabindex = "3" })
                                        @Html.ValidationMessageFor(model => model.UniversityId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Subject, "Subject", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @tabindex = "4" } })
                                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Year, "Pass Year", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @tabindex = "5" } })
                                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Result, "Result ", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Result, new { htmlAttributes = new { @class = "form-control", @tabindex = "6" } })
                                        @Html.ValidationMessageFor(model => model.Result, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SchoolOrCallege, "School/Callege", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.SchoolOrCallege, new { htmlAttributes = new { @class = "form-control", @tabindex = "7" } })
                                        @Html.ValidationMessageFor(model => model.SchoolOrCallege, "", new { @class = "text-danger" })
                                    </div>



                                </div>

                            </div>
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-12 col-sm-12">

                                    @Html.HiddenFor(c => c.Id)
                                    @Html.HiddenFor(c => c.GeneralInformationId)

                                    <div class="form-group col-md-2 col-sm-2">
                                        <input type="button" id="btnSubmit" value="SAVE" class="btn btn-primary btn-block" />
                                    </div>
                                    <div class="form-group col-md-2 col-sm-2">
                                        <input type="hidden" id="pageNumber" />
                                        <input type="hidden" id="personalId" />
                                        <a class="btn btn-primary btn-block" id="previousButton"><i class="fa fa-arrow-left">Back</i></a>
                                    </div>

                                    <div class="form-group col-md-2 col-sm-2">
                                        <input type="button" id="btnRefresh" value="CLEAR" class="btn btn-primary btn-block" />
                                    </div>
                                    <div class="form-group col-md-2 col-sm-2">
                                        <input type="hidden" id="pageNumber" />
                                        <input type="hidden" id="personalId" />
                                        <a class="btn btn-primary btn-block" id="nextButton">Next <i class="fa fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>
        }

        <div class="box box-info">
                <div class="box-header"><h5 class="box-title">History</h5></div>
                <div class="box-body">
                    <table id="eduList" class="table table-bordered table-hover display nowrap" style="width: 100%">
                        <thead>
                            <tr>
                             
                                <th style="text-align: center">ExamName</th>
                                <th style="text-align: center">SchoolOrCallege</th>
                                <th style="text-align: center">Subject</th>
                                <th style="text-align: center">Result</th>
                                <th style="text-align: center"></th>
                                <th style="text-align: center"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
    </div>
</div>

@section ViewSpecificJavascript
{
<script src="~/Scripts/FormScript/Form Script/educationInformationsform.js"></script>


}

